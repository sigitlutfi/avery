{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2020",
    "jsx": "react",
    "allowImportingTsExtensions": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "paths": {
      "@components": ["components/*"],
      "@screens": ["screens/*"],
      "@image": ["images/*"],
      "@assets": ["assets/*"],
      "@contexts": ["contexts/*"]
    }
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
